<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main app theme -->
    <style name="Theme.Fluxer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/surface</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!--
      Splash screen theme (Android 12+ SplashScreen API).
      Set on MainActivity in the manifest; switches to Theme.Fluxer after launch.
      On Android < 12 the SplashScreen compat library renders a plain splash
      using the same background/icon so the experience is consistent.
    -->
    <style name="Theme.Fluxer.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Fluxer</item>
    </style>

</resources>
